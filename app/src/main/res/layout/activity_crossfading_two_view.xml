<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geostar.solrtest.android.anim.CrossfadingTwoViewActivity">

    <Button
        android:id="@+id/btn_do_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="执行动画"
         />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_no_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/btn_do_action"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_do_action"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/test_str"
        android:textColor="#efefef"
        android:textSize="18sp"
        >
    </TextView>

</android.support.constraint.ConstraintLayout>
