<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hanlyjiang.learnandroid">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.hanlyjiang.learnandroid.LauncherMenuListActivity"
            android:label="非地图类功能测试"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hanlyjiang.learnandroid.ftp.FTPDownloadActivity"
            android:label="@string/ftp_download_test">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hanlyjiang.learnandroid.LauncherMenuListActivity" />
        </activity>
        <activity
            android:name="com.hanlyjiang.learnandroid.solr.SolrTestActivity"
            android:label="Solr 服务连接测试">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hanlyjiang.learnandroid.LauncherMenuListActivity" />
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name="com.hanlyjiang.learnandroid.solr.request.TwoFuncTestActivity" />
        <activity
            android:name="com.hanlyjiang.learnandroid.android.recyclerview.RecyclerViewHorizonActivity"
            android:theme="@style/AppTheme" />
        <activity android:name="com.hanlyjiang.learnandroid.android.view.SimpleViewGroupActivity" />
        <activity android:name="com.hanlyjiang.learnandroid.IntentTestActivity" />
        <activity android:name="com.hanlyjiang.learnandroid.android.view.MainDividerActivity" />
        <activity android:name="com.hanlyjiang.learnandroid.android.listview.ExpandableListActivity" />
        <activity android:name="com.hanlyjiang.learnandroid.android.listview.DeptmentActivity" />
        <activity android:name="com.hanlyjiang.learnandroid.android.simple.NestedViewActivity" />
        <activity android:name="com.hanlyjiang.learnandroid.android.anim.AnimTestActivity" />
        <activity android:name="com.hanlyjiang.learnandroid.android.view.ActivitySelectedView" />
        <activity android:name="com.hanlyjiang.learnandroid.components.ImageViewActivity" />
        <activity android:name="com.hanlyjiang.learnandroid.components.TestImageViewActivity" />

        <receiver android:name="com.hanlyjiang.learnandroid.android.view.NewAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/new_app_widget_info" />
        </receiver>

        <activity android:name="com.hanlyjiang.learnandroid.android.view.NewAppWidgetConfigureActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity android:name="com.hanlyjiang.learnandroid.android.anim.CrossfadingTwoViewActivity" />
        <activity android:name="com.hanlyjiang.learnandroid.dialog.DialogTestActivity" />
        <activity android:name="com.hanlyjiang.learnandroid.android.popup.PopUpTestActivity" />
        <activity
            android:name="com.hanlyjiang.learnandroid.android.fragment.FragmentNestedActivity"
            android:label="@string/fragment_nested"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name="com.hanlyjiang.learnandroid.android.view.ScrollViewLocateActivity" />
        <activity android:name="com.hanlyjiang.learnandroid.android.listview.ActivityNestedListView"></activity>
    </application>

</manifest>